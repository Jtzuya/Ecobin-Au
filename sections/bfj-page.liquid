{{ 'section-blog-post.css' | asset_url | stylesheet_tag }}

<article class="article-template common-display --g-px" itemscope itemtype="http://schema.org/BlogPosting">
  <div class="__articleContentCase">
    <h3 class="__pageHeading">{{ page.title }}</h3>
    <div class="__articleMainContent">
      {{ page.content -}}
    </div>
  </div>
</article>

<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Article",
    "articleBody": {{ page.content | strip_html | json }},
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": {{ request.origin | append: page.url | json }}
    },
    "headline": {{ page.title | json }},
    {% if page.excerpt != blank %}
      "description": {{ page.excerpt | strip_html | json }},
    {% endif %}
    {% if page.image %}
      "image": [
        {{ article | image_url: width: page.image.width | prepend: "https:" | json }}
      ],
    {% endif %}
    "datePublished": {{ page.published_at | date: '%Y-%m-%dT%H:%M:%SZ' | json }},
    "dateCreated": {{ page.created_at | date: '%Y-%m-%dT%H:%M:%SZ' | json }},
    "author": {
      "@type": "Person",
      "name": {{ page.author | json }}
    },
    "publisher": {
      "@type": "Organization",
      {% if settings.share_image %}
        "logo": {
          "@type": "ImageObject",
          "height": {{ settings.share_image.height | json }},
          "url": {{ settings.share_image | image_url: width: settings.share_image.width | prepend: "https:" | json }},
          "width": {{ settings.share_image.width | json }}
        },
      {% endif %}
      "name": {{ shop.name | json }}
    }
  }
</script>
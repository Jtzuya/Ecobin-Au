{%- assign ss = section.settings -%}

<div class="__imageTextCase" id="Image-Text--{{ ss.id }}">
    {%- for block in section.blocks -%}
        {%- case block.type -%}
            {%- when 'image' -%}
                {%- liquid 
                    assign bs = block.settings 
                    assign logo_height = section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio
                -%}
                {%- if bs.image != blank -%}
                    {{ bs.image | image_url: width: 'master' | image_tag:
                        class: '__image-textImage',
                        widths: '150, 200, 250, 300, 400, 500',
                        height: logo_height,
                        width: section.settings.logo_width,
                        alt: bs.image.alt
                    }}
                {%- endif -%}
            {%- when 'content' -%}
        {%- endcase -%}
    {%- endfor -%}
</div>

{% schema %}
{
  "name": "Image Text 2",
  "max_blocks": 1,
  "blocks": [
    {
      "type": "image",
      "name": "image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "content",
      "name": "content",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "HEADLINE GOES HERE"
        },
        {
          "type": "richtext",
          "id": "paragraph",
          "label": "Paragraph",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquet ut mi lobortis aliquet commodo nullam. Orci, laoreet phm ipsum dolor sit amet, aretra.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Text 2"
    }
  ]
}
{% endschema %}
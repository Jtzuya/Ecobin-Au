{{ 'section-bfj-image-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
    .--custom-padding--{{ section.id }} {
        padding-top: {{ section.settings.padding_top | append: 'px' -}};
        padding-bottom: {{ section.settings.padding_bot | append: 'px' -}};
        background-color: {{ section.settings.bg_color }};
    }

    #Image-Text--{{ section.id }} {
      gap: {{ section.settings.gap | append: 'px' -}};
    }

    @media (max-width: 767px) {
        .--custom-padding--{{ section.id }} {
            padding-top: calc({{ section.settings.padding_top | append: 'px' -}} / 2.5);
            padding-bottom: calc({{ section.settings.padding_bot | append: 'px' -}} / 2.5);
        }

        #Image-Text--{{ section.id }} {
          gap: calc({{ section.settings.gap | append: 'px ' -}} / 3);
        }
    }

    @media (min-width: 900px) {
        {%- if section.settings.block_width == 'equal' -%}
          #Image-Text--{{ section.id }} > * {
            width: 50%;
          }
        {%- endif -%}
    }

{%- endstyle -%}

<div class="--custom-padding--{{ section.id }}">
  <div class="__imageTextCase common-display --g-px 
      {%- if section.settings.align_items == 'center' -%}__flexCenter
      {%- elsif section.settings.align_items == 'end' -%}__flexEnd
      {%- else -%}__flexStart{%- endif -%}" id="Image-Text--{{ section.id }}">
      {%- for block in section.blocks -%}
          {%- case block.type -%}
              {%- when 'image' -%}
                  {%- assign bs = block.settings -%}

                  {%- if template == 'article.article' -%}
                    {%- if article.image != blank -%}
                      <div class="__imageCase">
                        {{ article.image | image_url: width: '805' | image_tag:
                            loading: 'lazy',
                            class: '__image-textImage __pageImage',
                            widths: '150, 200, 250, 300, 400, 500',
                            alt: article.image.alt
                        }}
                      </div>
                    {%- else -%}
                      <div class="__imageTextPlaceholder">
                          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' -}}
                      </div>
                    {%- endif -%}
                  {%- else -%}
                    {%- if bs.image != blank -%}
                      <div class="__imageCase">
                        {{ bs.image | image_url: width: '805' | image_tag:
                          loading: 'lazy',
                          class: '__image-textImage',
                          widths: '150, 200, 250, 300, 400, 500',
                          alt: bs.image.alt
                        }}
                      </div>
                    {%- else -%}
                      <div class="__imageTextPlaceholder">
                        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' -}}
                      </div>
                    {%- endif -%}
                  {%- endif -%}
              {%- comment -%} End of Image {%- endcomment -%}

              {%- when 'content' -%}
                  {%- assign bs = block.settings -%}
                  {%- style -%}
                      .__contentHeading--{{ block.id }} {
                          font-size: {{ bs.heading_size | append: 'px' -}};
                          letter-spacing: {{ bs.heading_letterSpacing | append: 'px' -}};
                          line-height: {{ bs.heading_lineHeight | append: 'px' -}};
                      }

                      @media (max-width: 767px) {
                        .__contentHeading--{{ block.id }} {
                            font-size: 5rem;
                            letter-spacing: {{ bs.heading_letterSpacing | append: 'px' -}};
                            line-height: 85%;
                        } 
                      }
                  {%- endstyle -%}
                  <div class="__image-textContent">
                    {%- if template == 'article.article' -%}
                      <div class="__eachArticleTags">
                        {%- for tag in article.tags -%}
                          {%- assign tagName = tag | replace: '_', ' ' | split: ', ' -%}
                          {%- if tag != blank -%}
                            <span class="__contentTag __tag">{{ tagName -}}</span>
                          {%- endif -%}
                        {%- endfor -%}
                      </div>

                      {%- if article.title != blank -%}
                          <h3 class="__contentHeading __contentHeading--{{ block.id }}">{{ article.title | escape -}}</h3>
                      {%- endif -%}

                      {%- if bs.paragraph != blank -%}
                          <div class="__contentParagraph __pageParagraph">{{ article.content }}</div>
                      {%- endif -%}
                    {%- else -%}
                      {%- if bs.tag != blank -%}
                        <span class="__contentTag">{{ bs.tag | escape }}</span>
                      {%- endif -%}

                      {%- if bs.heading != blank -%}
                          <h3 class="__contentHeading __contentHeading--{{ block.id }}">{{ bs.heading | escape -}}</h3>
                      {%- endif -%}

                      {%- if bs.paragraph != blank -%}
                          <div class="__contentParagraph">{{ bs.paragraph | strip_html }}</div>
                      {%- endif -%}

                      {%- if bs.btn != blank -%}
                          <div class="__contentBtnCase">
                              <a href="{%- if bs.btn_url != blank -%}{{ bs.btn_url -}}{%- else -%}#{%- endif -%}" class="button button--primary">
                              <span class="__contentText">{{ bs.btn }}</span>
                              </a>
                          </div>
                      {%- endif -%}
                    {%- endif -%}
                  </div>
              {%- comment -%} End of content {%- endcomment -%}

              {%- when 'content_v2' -%}
                {%- assign bs = block.settings -%}
                  <div class="__contentV2">
                    {%- if bs.long_text_1 != blank -%}
                      <div class="__longText">{{ bs.long_text_1 -}}</div>
                    {%- endif -%}

                    {%- if bs.heading_v2 != blank -%}
                      <h3 class="__HeadingV2 __contentHeading--{{ block.id }}">{{ bs.heading_v2 | escape -}}</h3>
                    {%- endif -%}

                    {%- if bs.long_text_2 != blank -%}
                      <div class="__longText">{{ bs.long_text_2 -}}</div>
                    {%- endif -%}
                  </div>
              {%- comment -%} End of Content_v2 {%- endcomment -%}

              {%- when 'slider' -%}
                {%- liquid 
                    assign bs = block.settings 
                    assign image_1 = block.settings.image_1
                    assign image_2 = block.settings.image_2
                    assign image_3 = block.settings.image_3
                    assign image_4 = block.settings.image_4
                -%}
                <div class="__imageSliderCase">
                  <div class="swiper-wrapper">
                    <div class="swiper-slide">
                      <div class="__imageSwiperCase">
                          {%-liquid
                              assign image_height = image_1.width | divided_by: image_1.aspect_ratio
                          -%}
                          {{ image_1 | image_url: width: 1440 | image_tag:
                              loading: 'lazy',
                              width: image_1.width,
                              height: image_height,
                              widths: '375, 550, 750, 1440, 1500, 1780, 2000, 3000, 3840',
                              alt: image_1.alt | escape
                          }}
                      </div>
                    </div><!-- end of slide 1 -->
                    <div class="swiper-slide">
                      <div class="__imageSwiperCase">
                          {%-liquid
                              assign image_height = image_2.width | divided_by: image_2.aspect_ratio
                          -%}
                          {{ image_2 | image_url: width: 1440 | image_tag:
                              loading: 'lazy',
                              width: image_2.width,
                              height: image_height,
                              widths: '375, 550, 750, 1440, 1500, 1780, 2000, 3000, 3840',
                              alt: image_2.alt | escape
                          }}
                      </div>
                    </div><!-- end of slide 2 -->
                    <div class="swiper-slide">
                      <div class="__imageSwiperCase">
                          {%-liquid
                              assign image_height = image_3.width | divided_by: image_3.aspect_ratio
                          -%}
                          {{ image_3 | image_url: width: 1440 | image_tag:
                              loading: 'lazy',
                              width: image_3.width,
                              height: image_height,
                              widths: '375, 550, 750, 1440, 1500, 1780, 2000, 3000, 3840',
                              alt: image_3.alt | escape
                          }}
                      </div>
                    </div><!-- end of slide 3 -->
                    <div class="swiper-slide">
                      <div class="__imageSwiperCase">
                          {%-liquid
                              assign image_height = image_4.width | divided_by: image_4.aspect_ratio
                          -%}
                          {{ image_4 | image_url: width: 1440 | image_tag:
                              loading: 'lazy',
                              width: image_4.width,
                              height: image_height,
                              widths: '375, 550, 750, 1440, 1500, 1780, 2000, 3000, 3840',
                              alt: image_4.alt | escape
                          }}
                      </div>
                    </div><!-- end of slide 4 -->
                  </div>

                  <div class="__miscCase">
                    <div class="__imageSliderPrevBtn">{%- render 'arrow-prev' -%}</div>
                    <div class="__imageSliderPagination"></div>
                    <div class="__imageSliderNextBtn">{%- render 'arrow-next' -%}</div>
                  </div>
                </div>
              {%- comment -%} End of Slider {%- endcomment -%}

              {%- when 'video' -%}
                <div class="__videoCase">
                  {%- render 'component-video', block.settings: block.settings, block: block, section: section, section.settings: section.settings -%}
                </div>
          {%- endcase -%}
      {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "BFJM - Image Text",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Padding Top",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bot",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 100
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "block_width",
      "options": [
        {
          "value": "equal",
          "label": "Equal Width Each Block"
        },
        {
          "value": "unset",
          "label": "Unset Width"
        }
      ],
      "default": "unset",
      "label": "Set Width"
    },
    {
      "type": "select",
      "id": "align_items",
      "options": [
        {
          "value": "start",
          "label": "Flex Start"
        },
        {
          "value": "center",
          "label": "Flex Center"
        },
        {
          "value": "end",
          "label": "Flex End"
        }
      ],
      "default": "start",
      "label": "Align Items"
    },
    {
      "type": "range",
      "id": "gap",
      "min": 100,
      "max": 200,
      "step": 1,
      "unit": "px",
      "label": "Gap Between Each Block",
      "default": 113
    }
  ],
  "max_blocks": 2,
  "blocks": [
    {
      "type": "image",
      "name": "image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "content",
      "name": "content",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "tag",
          "label": "Tag"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "HEADLINE GOES HERE"
        },
        {
          "type": "range",
          "id": "heading_size",
          "min": 0,
          "max": 72,
          "step": 1,
          "unit": "px",
          "label": "Heading Font Size",
          "default": 42
        },
        {
          "type": "range",
          "id": "heading_lineHeight",
          "min": -5,
          "max": 72,
          "step": 1,
          "unit": "px",
          "label": "Heading Line Height",
          "default": 64
        },
        {
          "type": "range",
          "id": "heading_letterSpacing",
          "min": -5,
          "max": 72,
          "step": 1,
          "unit": "px",
          "label": "Heading Letter Spacing",
          "default": -3
        },
        {
          "type": "richtext",
          "id": "paragraph",
          "label": "Paragraph",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquet ut mi lobortis aliquet commodo nullam. Orci, laoreet phm ipsum dolor sit amet, aretra.</p>"
        },
        {
          "type": "text",
          "id": "btn",
          "label": "Button Text",
          "default": "CONTINUE YOUR JOURNEY",
          "info": "Just remove the text above in order to hide the button"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "Button URL"
        }
      ]
    },
    {
      "type": "content_v2",
      "name": "content_v2",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "long_text_1",
          "label": "Paragraph"
        },
        {
          "type": "text",
          "id": "heading_v2",
          "label": "Heading",
          "default": "HEADLINE GOES HERE"
        },
        {
          "type": "range",
          "id": "heading_size_v2",
          "min": 0,
          "max": 72,
          "step": 1,
          "unit": "px",
          "label": "Heading Font Size",
          "default": 42
        },
        {
          "type": "range",
          "id": "heading_lineHeight_v2",
          "min": -5,
          "max": 72,
          "step": 1,
          "unit": "px",
          "label": "Heading Line Height",
          "default": 64
        },
        {
          "type": "range",
          "id": "heading_letterSpacing_v2",
          "min": -5,
          "max": 72,
          "step": 1,
          "unit": "px",
          "label": "Heading Letter Spacing",
          "default": -3
        },
        {
          "type": "richtext",
          "id": "long_text_2",
          "label": "Paragraph"
        }
      ]
    },
    {
      "type": "slider",
      "name": "slider",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "image_3",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "image_4",
          "label": "Image"
        }
      ]
    },
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "video_url",
          "id": "video_url",
          "accept": [
            "youtube",
            "vimeo"
          ],
          "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
          "label": "t:sections.video.settings.video_url.label",
          "placeholder": "t:sections.video.settings.video_url.placeholder",
          "info": "t:sections.video.settings.video_url.info"
        },
        {
          "type": "image_picker",
          "id": "cover_image",
          "label": "t:sections.video.settings.cover_image.label"
        },
        {
          "type": "checkbox",
          "id": "full_width",
          "label": "t:sections.video.settings.full_width.label",
          "default": false
        },
        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            {
              "value": "accent-1",
              "label": "t:sections.all.colors.accent_1.label"
            },
            {
              "value": "accent-2",
              "label": "t:sections.all.colors.accent_2.label"
            },
            {
              "value": "background-1",
              "label": "t:sections.all.colors.background_1.label"
            },
            {
              "value": "background-2",
              "label": "t:sections.all.colors.background_2.label"
            },
            {
              "value": "inverse",
              "label": "t:sections.all.colors.inverse.label"
            }
          ],
          "default": "background-1",
          "label": "t:sections.all.colors.label"

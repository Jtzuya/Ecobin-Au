      ]
    }
  ],
  "presets": [
    {
      "name": "BFJM - Image Text",
      "blocks": [
        {
          "type": "content",
          "settings": {
          }
        },
        {
          "type": "image",
          "settings": {
          }
        }
      ]
    }
  ]
}
